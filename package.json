{
  "name": "loldrivers-nextjs",
  "version": "1.0.0",
  "type": "module",
  "description": "LOLDrivers Database with SSR and caching",
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "clean": "rimraf .next",
    "update-data": "node scripts/update-data.js",
    "check-vulnerable-drivers": "node scripts/check-vulnerable-drivers.js",
    "check-results": "node scripts/check-results.js",
    "test-hvci": "node scripts/test-hvci.js",
    "test-hvci-dry": "DRY_RUN=true node scripts/test-hvci.js",
    "postinstall": "pnpm run type-check"
  },
  "dependencies": {
    "memory-cache": "^0.2.0",
    "next": "^15.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "swr": "^2.2.5",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/memory-cache": "^0.2.5",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/xml2js": "^0.4.14",
    "eslint": "^9.14.0",
    "eslint-config-next": "^15.0.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.3.12",
      "@types/react-dom": "^18.3.1"
    }
  }
}
